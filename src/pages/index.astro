---

<Layout title="So Onishi - Portfolio">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4" data-i18n="hero.name"></h1>
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-gray-700 leading-relaxed" data-i18n="hero.description"></p>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6" data-i18n="about.title"></h2>
      <div class="bg-white rounded-lg shadow p-6">
      <p class="text-gray-700 mb-4 font-bold text-lg" data-i18n="about.passion"></p>
      <div class="mb-6">
        <h3 class="font-semibold mb-4" data-i18n="about.experience.title"></h3>
        <div class="space-y-6 max-h-96 overflow-y-auto" id="experience-list">
        <!-- Experience items will be populated by JavaScript -->
        </div>
      </div>
      </div>
    </section>

    <!-- News Section -->
    <section id="news" class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6" data-i18n="news.title"></h2>
      <div class="bg-white rounded-lg shadow p-6 overflow-y-auto max-h-48">
        <ul class="space-y-4" id="news-list">
          <!-- News items will be populated by JavaScript -->
        </ul>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6" data-i18n="projects.title"></h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow p-6 transition-shadow hover:shadow-lg"> 
          <h3 class="text-xl font-semibold mb-2" data-i18n="projects.transcription.title"></h3>
          <p class="text-gray-700 mb-2" data-i18n="projects.transcription.description"></p>
          <a
            href="https://github.com/soso0024/python-projects/tree/main/transcription"
            class="text-primary hover:text-primary-dark"
            target="_blank"
            data-i18n="projects.transcription.viewOnGithub"
          ></a>
        </div>
        <div class="bg-white rounded-lg shadow p-6 transition-shadow hover:shadow-lg">
          <h3 class="text-xl font-semibold mb-2" data-i18n="projects.fileManagement.title"></h3>
          <p class="text-gray-700 mb-2" data-i18n="projects.fileManagement.description"></p>
          <a
            href="https://github.com/soso0024/python-projects/tree/main/file-manage"
            class="text-primary hover:text-primary-dark"
            target="_blank"
            data-i18n="projects.fileManagement.viewOnGithub"
          ></a>
        </div>
        <div class="bg-white rounded-lg shadow p-6 transition-shadow hover:shadow-lg">
          <h3 class="text-xl font-semibold mb-2" data-i18n="projects.timeManagement.title"></h3>
          <p class="text-gray-700 mb-2" data-i18n="projects.timeManagement.description"></p>
          <a
            href="https://github.com/soso0024/python-projects/tree/main/time-manage"
            class="text-primary hover:text-primary-dark"
            target="_blank"
            data-i18n="projects.timeManagement.viewOnGithub"
          ></a>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6" data-i18n="skills.title"></h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <SkillCard
          title="Backend"
          skills={["Python", "API Development", "Database Design"]}
          icon={backendIcon}
        />
        <SkillCard
          title="Tools"
          skills={["Git", "GitHub", "VS Code"]}
          icon={toolsIcon}
        />
        <SkillCard
          title="Cloud"
          skills={["AWS", "Cloud Infrastructure"]}
          icon={cloudIcon}
        />
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6" data-i18n="contact.title"></h2>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <a href="https://github.com/soso0024" 
             class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-primary hover:text-primary transition-colors"
             target="_blank">
            <span class="text-gray-700 hover:text-primary" set:html={githubIcon} />
            <div>
              <div class="font-medium" data-i18n="contact.github.title"></div>
              <div class="text-sm text-gray-500" data-i18n="contact.github.description"></div>
            </div>
          </a>
          <a href="https://zenn.dev/os515" 
             class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-primary hover:text-primary transition-colors"
             target="_blank">
            <span class="text-gray-700 hover:text-primary" set:html={zennIcon} />
            <div>
              <div class="font-medium" data-i18n="contact.zenn.title"></div>
              <div class="text-sm text-gray-500" data-i18n="contact.zenn.description"></div>
            </div>
          </a>
          <a href="https://www.linkedin.com/in/so-onishi/" 
             class="flex items-center gap-3 p-4 rounded-lg border border-gray-200 hover:border-primary hover:text-primary transition-colors"
             target="_blank">
            <span class="text-gray-700 hover:text-primary" set:html={linkedinIcon} />
            <div>
              <div class="font-medium" data-i18n="contact.linkedin.title"></div>
              <div class="text-sm text-gray-500" data-i18n="contact.linkedin.description"></div>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>

  <script>
    import { translations } from '../i18n/translations';

    function getNestedValue(obj: any, path: string): string {
      return path.split('.').reduce((current, key) => current?.[key], obj) as string;
    }

    function updateExperienceSection(lang: string) {
      const experienceListElement = document.getElementById('experience-list');
      if (!experienceListElement) return;

      const experienceItems = translations[lang].about.experience.items;
      experienceListElement.innerHTML = experienceItems.map(item => `
        <div class="border-l-2 border-primary pl-4">
          <div class="flex justify-between items-start mb-1">
            <div>
              <h4 class="font-medium">${item.role}</h4>
              <p class="text-gray-600">${item.company}</p>
            </div>
            <span class="text-sm text-gray-500">${item.period}</span>
          </div>
          <p class="text-gray-600">${item.description}</p>
        </div>
      `).join('');
    }

    function updateNewsSection(lang: string) {
      const newsListElement = document.getElementById('news-list');
      if (!newsListElement) return;

      const newsItems = translations[lang].news.items;
      newsListElement.innerHTML = newsItems.map(item => `
        <li class="flex items-start">
          <span class="text-gray-700 mr-2">${item.description.slice(-2)}</span>
          <div>
            <div class="font-medium">${item.date}</div>
            <div class="text-gray-600">${item.description.slice(0, -2)}</div>
          </div>
        </li>
      `).join('');
    }

    function updateContent(lang: string) {
      const elements = document.querySelectorAll('[data-i18n]');
      elements.forEach((element) => {
        const key = element.getAttribute('data-i18n');
        if (key) {
          const value = getNestedValue(translations[lang], key);
          if (element instanceof HTMLElement) {
            element.textContent = value;
          }
        }
      });

      // Update experience and news sections separately since they require special handling
      updateExperienceSection(lang);
      updateNewsSection(lang);
    }

    // Initialize with stored language or default to English
    const initialLang = localStorage.getItem('lang') || 'en';
    updateContent(initialLang);

    // Listen for language changes
    document.addEventListener('languageChange', ((event: CustomEvent) => {
      updateContent(event.detail.lang);
    }) as EventListener);
  </script>
</Layout>
